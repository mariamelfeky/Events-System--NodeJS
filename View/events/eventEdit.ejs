<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit Event Data</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/bootstrab/register/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/bootstrab/register/css/style.css">
</head>
<body>
    <%- include("../authentication/navbar.ejs") -%>
    <div class="main">

        <section class="signup">
            <img src="images/signup-bg.jpg" alt="">
            <div class="container">
                <div class="signup-content">
                    <form method="POST" id="signup-form" class="signup-form" action="/events/edit" >
                        <h2 class="form-title">Edit Event Data</h2>
                        <div class="form-group">
                            <input type="text" class="form-input" name="_id" id="id" placeholder="Event ID" value="<%=data._id%>" style="background-color: rgb(233, 230, 230);" readonly/>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="title" id="title" placeholder="Event Title" value="<%=data.title%>"/>
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-input" name="eventDate" id="eventDate" placeholder="Event Data" value="<%=data.eventDate%>"/>
                        </div>

                        <div class="form-group">
                            <label>main speaker</label>
                            <br/>
                            <select id="mainSpeaker" name="mainSpeaker"> 

                               <% speaker.forEach((item)=>{ 
                                    if(item._id !=null){
                                    if(item._id == data.mainSpeaker._id){ %>
                                <option value="<%=item._id%>" selected="selected"><%=item.UserName%></option>
                              <% }
                              else{%>
                                  <option value="<%=item._id%>"><%=item.UserName%></option>
                              <%}}
                            })
                              %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>other speaker</label>
                            <br/>
                            <select  multiple="multiple"  id="otherSpeaker" name="otherSpeakers">
                                                               
                               <% speaker.forEach((item)=>{
                                if(data.otherSpeakers.find((speakerItem)=>
                                    speakerItem._id == item._id
                                )){%>
                                <option style="width: 200px;" value="<%=item._id%>" selected="selected"><%=item.UserName%></option>
                               <% }
                               else{%>
                                <option style="width: 200px;" value="<%=item._id%>"><%=item.UserName%></option>
                               <%}
                                   
                                })
                                  %>
                            </select>
                        </div>
                       
                       
                        <div class="form-group">
                            <input type="submit" name="submit" id="submit" class="form-submit " value="Update"/>
                        </div>
                    </form>
                </div>
            </div>
        </section>

    </div>
    <%- include("../authentication/footer.ejs") -%>
    <!-- JS -->
    <script src="/bootstrab/register/vendor/jquery/jquery.min.js"></script>
    <script src="/bootstrab/register/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>