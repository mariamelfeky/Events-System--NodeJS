<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Add New Event</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="/bootstrab/register/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/bootstrab/register/css/style.css">
</head>

<body>
    <%- include("../authentication/navbar.ejs") -%>
    <div class="main">

        <section class="signup">
            <!-- <img src="images/signup-bg.jpg" alt=""> -->
            <div class="container">
                <div class="signup-content">
                    <form method="POST" id="signup-form" class="signup-form" action="/events/add">
                        <h2 class="form-title">Add Event</h2>
                        <div class="form-group">
                            <input type="text" class="form-input" name="_id" id="id" placeholder="Event ID" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-input" name="title" id="name" placeholder="Event Title" />
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-input" name="eventDate" id="eventDate" placeholder="Event Date" />
                        </div>
                        <div class="form-group">
                            <label>main speaker</label>
                            <br/>
                            <select id="mainSpeaker" name="mainSpeaker">
                                <% data.forEach((item)=>{ %>
                                <option style="width: 200px;" value="<%=item._id%>"><%=item.UserName%></option>
                                <% })
                              %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Other speakerS</label>
                            <br/>
                            <select  multiple="multiple"  id="otherSpeaker" name="otherSpeakers">
                                <% data.forEach((item)=>{ %>
                                <option style="width: 100px;" value="<%=item._id%>"><%=item.UserName%></option>

                                <% })
                              %>
                            </select>

                            <div class="form-group">
                                <input type="submit" name="submit" id="submit" class="form-submit " value="Add" />
                            </div>
                    </form>
                </div>
            </div>
        </section>

    </div>
    <%- include("../authentication/footer.ejs") -%>

    <!-- JS -->
    <script src="/bootstrab/register/vendor/jquery/jquery.min.js"></script>
    <script src="/bootstrab/register/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>